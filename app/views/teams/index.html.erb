<% content_for :title do %>
  Your Teams - SnapBlast
<% end %>

<h1>Your Teams</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Season</th>
      <th>League</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team["team"]["team_name"] %></td>
        <td><%= team["team"]["team_season"] %></td>
        <td><%= team["team"]["team_league"] %></td>
        <td><%= link_to "Call", new_call_path(:id => team["team"]["id"]), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
